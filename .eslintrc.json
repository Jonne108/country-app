{
  "env": {
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "standard"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "no-console": 1,
    "no-empty": 1,
    "no-irregular-whitespace": 1,
    "semi": [1, "always"],
    "quotes": [2, "single"],
    "space-before-function-paren": "off",
    "no-unused-vars": "off",
    "react/prop-types": "off",
    "react/require-default-props": "off"
  }
}
